.no-login,
.content {
    width: 100%;
    height: 100vh;
}

.explain {
    font-size: 30rpx;
    color: rgb(133, 134, 134);
}

.login-bt {
    margin-top: 150rpx;
    padding: 15rpx 80rpx;
    background: linear-gradient(to right, #ff6034, #ee0a24);
    border-radius: 40rpx;
    color: white;
}

.bt-hover {
    background: linear-gradient(to right, #ad4123, #c4081e);
}

.logins {
    padding-top: 100rpx
}

.img {
    width: 100rpx;
    border-radius: 50%;
}

.user {
    margin: 0 40rpx;
    font-size: 32rpx;
}

.follows {
    margin-top: 10rpx;
    font-size: 28rpx;
    color: rgb(149, 151, 153);
}

.split {
    margin: 0 20rpx;
}

.sign {
    margin-left: 40rpx;
    width: 140rpx;
    height: 40rpx;
    background: #BE351C;
    border-radius: 20rpx;
    font-size: 24rpx;
    color: white;
}

.switch {
    width: 90%;
    margin: 150rpx auto;
}

.switch-item {
    font-size: 28rpx;
    color: rgb(85, 85, 85);
}

.switch-img {
    width: 80rpx;
    margin-bottom: 20rpx;
}