@import "../../../app.wxss";
.item {
    margin: 25rpx auto;
    width: 90vw;
}

.item-left {
    width: 180rpx;
    position: relative;
}

.play {
    position: absolute;
    top: 5rpx;
    right: 5rpx;
    color: white;
    font-size: 26rpx;
}

.paly-ico {
    margin-right: 10rpx;
    font-size: 32rpx;
}

.img {
    width: 180rpx;
    height: auto;
    border-radius: 10rpx;
}

.item-details {
    padding-left: 15rpx;
}

.item-name {
    font-size: 29rpx;
    height: auto;
    -webkit-line-clamp: 2;
}


/* .names {
    color: rgb(46, 93, 141);
