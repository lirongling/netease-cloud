.number {
    margin-top: 12rpx;
}

.number-item {
    margin-right: 20rpx;
    font-size: 25rpx;
    color: rgb(117, 117, 117);
}

.creator {
    -webkit-line-clamp: 1;
    max-width: 260rpx;
}

.description {
    margin-top: 12rpx;
    font-size: 27rpx;
    width: 100%;
    color: rgb(90, 90, 90);
    -webkit-line-clamp: 2;
}