.number {
    margin-top: 12rpx;
}

.number-item {
    margin-right: 20rpx;
    font-size: 25rpx;
    color: rgb(117, 117, 117);
    padding: 5rpx 15rpx;
    border-radius: 15rpx;
}

.number-items {
    margin-right: 20rpx;
    font-size: 25rpx;
    color: rgb(117, 117, 117);
    -webkit-line-clamp: 1;
    flex: 1;
}

.creator {
    margin-right: 10rpx;
    max-width: 260rpx;
}